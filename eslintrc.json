{
  "extends": ["eslint:recommended", "next", "prettier"],
  "plugins": ["simple-import-sort"],
  "rules": {
    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error",
    "react-hooks/exhaustive-deps": "off"
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "simple-import-sort/imports": [
          "error",
          {
            "groups": [
              ["^react"],
              ["^next"],
              ["^@?\\w"],
              ["^(@/assets/icons)(/.*|$)"],
              ["^(@/data)(/.*|$)"],
              ["^(@/hooks)(/.*|$)"],
              ["^(@/store)(/.*|$)"],
              ["^(@/components)(/.*|$)"],
              ["^\\u0000"],
              ["^\\.\\.(?!/?$)", "^\\.\\./?$"],
              ["^\\./(?=.*/)(?!/?$)", "^\\.(?!/?$)", "^\\./?$"],
              ["^.+\\.?(scss)$"]
            ]
          }
        ]
      }
    }
  ]
}
